// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Exchange {
  id        String   @id @default(uuid())
  name      String   @unique
  pairs     Pair[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Pair {
  id         String   @id @default(uuid())
  symbol     String
  baseAsset  String
  quoteAsset String
  exchange   Exchange @relation(fields: [exchangeId], references: [id])
  exchangeId String
  candles    Candle[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([symbol, exchangeId])
}

model Candle {
  id        String   @id @default(uuid())
  timestamp DateTime
  open      Float
  high      Float
  low       Float
  close     Float
  volume    Float
  pair      Pair     @relation(fields: [pairId], references: [id])
  pairId    String
  interval  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([pairId, timestamp, interval])
  @@index([timestamp])
}

// Table pour stocker les dernières mises à jour par paire/intervalle
model LastUpdate {
  id        String   @id @default(uuid())
  pairId    String
  interval  String
  timestamp DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([pairId, interval])
} 