# API Keys
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
BINANCE_API_KEY=your_binance_key
BINANCE_API_SECRET=your_binance_secret
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sadie_db
DB_USER=sadie_user
DB_PASSWORD=your_db_password
USE_TIMESCALEDB=true

# Model Configuration
MODEL_SAVE_PATH=models/saved
CACHE_DIR=cache
LOG_LEVEL=INFO
BATCH_SIZE=32
EPOCHS=100
VALIDATION_SPLIT=0.2
SEQUENCE_LENGTH=60
USE_GPU=true

# Data Collection
UPDATE_INTERVAL=300
MAX_RETRIES=3
REQUEST_TIMEOUT=30
CACHE_EXPIRY=3600
SYMBOLS=BTC,ETH,BNB

# Web Interface
WEB_HOST=0.0.0.0
WEB_PORT=8000
WEB_DEBUG=false
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=*

# Notifications
TELEGRAM_ENABLED=false
EMAIL_ENABLED=false
NOTIFICATION_INTERVAL=3600
PRICE_CHANGE_THRESHOLD=5.0
VOLUME_CHANGE_THRESHOLD=100.0

# Backtesting
BACKTEST_START_DATE=2020-01-01
BACKTEST_END_DATE=
INITIAL_BALANCE=10000.0
COMMISSION_RATE=0.001
USE_LEVERAGE=false
MAX_LEVERAGE=1.0

# Security
JWT_SECRET=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
RATE_LIMIT=100
RATE_LIMIT_PERIOD=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/sadie.log
