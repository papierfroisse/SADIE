# Configuration de l'environnement SADIE

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/sadie.log

# API REST
REST_API_URL=https://api.example.com
REST_API_KEY=your_api_key
REST_API_SECRET=your_api_secret
REST_TIMEOUT=30

# WebSocket
WS_URL=wss://stream.example.com
WS_API_KEY=your_ws_api_key
WS_API_SECRET=your_ws_api_secret

# Storage
STORAGE_TYPE=memory
STORAGE_MAX_SIZE=1000000

# Database (optionnel)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sadie
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Redis (optionnel)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password

# MÃ©triques
METRICS_WINDOW_SIZE=60
METRICS_LIST=mean,std,min,max

# Symboles
SYMBOLS=AAPL,GOOGL,MSFT,BTC-USD,ETH-USD
