// This is your Prisma schema file
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Candle {
  id        Int      @id @default(autoincrement())
  exchange  String   // 'binance' ou 'kraken'
  symbol    String
  timestamp DateTime
  open      Float
  high      Float
  low       Float
  close     Float
  volume    Float
  
  @@unique([exchange, symbol, timestamp])
  @@index([symbol, timestamp])
}

model TechnicalIndicator {
  id        Int      @id @default(autoincrement())
  symbol    String
  timestamp DateTime
  type      String   // 'SMA', 'EMA', 'RSI', etc.
  period    Int      // période de l'indicateur
  value     Float
  
  @@unique([symbol, timestamp, type, period])
  @@index([symbol, timestamp])
}

model Trade {
  id        Int      @id @default(autoincrement())
  exchange  String
  symbol    String
  timestamp DateTime
  price     Float
  amount    Float
  side      String   // 'buy' ou 'sell'
  
  @@index([symbol, timestamp])
}

// Pour la mise en cache des données en temps réel
model MarketData {
  id                Int      @id @default(autoincrement())
  exchange         String
  symbol           String
  lastPrice        Float
  priceChange24h   Float
  volume24h        Float
  highPrice24h     Float
  lowPrice24h      Float
  updatedAt        DateTime @updatedAt
  
  @@unique([exchange, symbol])
} 